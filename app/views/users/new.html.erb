<section class="home">

    <div class="hero">
        <div class="container">
            <div class="row">
                <div class="col-sm-7 col-sm-offset-5 hero-text">
                    <p class="hero-upcase-text Metrophobic">GET READY.</p>
                    <div class="hero-line">&nbsp;</div>

                    <h1 class="logo">
                        <%= link_to root_url do %>
                            <%= image_tag "home/logo.jpg" %>
                        <% end %>
                    </h1>

                    <p class="hero-upcase-text">is coming soon</p>
                    <div class="hero-line">&nbsp;</div>

                    <p class="hero-upcase-text hero-bottom-text Metrophobic">YOUR CLOSET (AND WALLET) WILL THANK YOU.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container form-section">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="form-container <%= "ended" if Rails.application.config.ended %>">
                    <% if Rails.application.config.ended %>
                        <p class="thanks Metrophobic">THANK YOU FOR PARTICIPATING<br>IN OUR PRE-LAUNCH.</p>
                        <p class="compiling Metrophobic">WE ARE COMPILING REWARDS RIGHT NOW AND WILL EMAIL<br/>COUPON CODES TO ALL RECIPIENTS IN THE NEXT DAY OR TWO</p>
                        <p class="go-to Metrophobic">In the meantime, head to  <a href="http://www.harrys.com/">WWW.HARRYS.COM</a></p>
                        <p class="again Metrophobic">Thank You Again!</p>
                        <% else %>
                        <p class="byline Metrophobic">BECOME AN INSIDER...</p>


                        <%= form_for @user, :url => { :action => "create" } do |f| %>
                            <div class="row">
                                <div class="col-md-7">
                                    <%= f.text_field :email, :placeholder => "Enter Email", :class => "email Metrophobic form-control" %>
                                </div>

                                <div class="col-md-5">
                                    <input class="submit Metrophobic btn btn-danger btn-pink btn-block" name="commit" type="submit" value="GIVE ME ACCESS" /> 
                                </div>
                            </div>
                               
                            </div>
                            
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    
    
</section>


